@inherits UserWaterIntakeTableBase


<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Consumed Water (ml)</th>
                <th scope="col">Date</th>
                
                <th scope="col"></th>
                

            </tr>
        </thead>
        <tbody>

            @foreach (var record in Records)
            {
                <tr>
                    <td>@record.ConsumedWater</td>
                    <td>@record.IntakeDate</td>
                    
                    

                    
                    <td> 
                        <button class="btn btn-danger float-end ms-3" @onclick=@( () => DeleteRecord(record.Id) )>Delete</button>
                        <button class="btn btn-primary float-end ms-3" @onclick=@( () => EditRecordDetails(record.Id) )>Edit</button>
                    </td>
                    

                </tr>
            }
        </tbody>
    </table>
</div>


