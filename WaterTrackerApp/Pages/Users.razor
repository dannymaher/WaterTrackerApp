@page "/"
@inherits UsersBase
<div class="row">
    <table>     
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Surname</th>
                <th scope="col">email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach(var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td><button class="btn btn-primary">Details</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

